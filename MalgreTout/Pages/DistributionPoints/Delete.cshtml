@page
@model MalgreTout.Pages.DistributionPoints.DeleteModel
@{ ViewData["Title"] = "Slet lokation"; }

<h1>Slet</h1>

<h3>Godkend sletning af lokation</h3>
<div>
	<h4>Lokation</h4>
	<hr />
	<form method="post">
		<dl class="row">

			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DistributionPoint.LocationId)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DistributionPoint.LocationId)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DistributionPoint.Company)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DistributionPoint.Company)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DistributionPoint.Address)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DistributionPoint.Address)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DistributionPoint.Zipcode)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DistributionPoint.Zipcode)
			</dd>
		</dl>


		<input type="hidden" asp-for="DistributionPoint.LocationId" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="GetDistributionPoints">Tilbage til liste</a>
	</form>
</div>