@page
@model MalgreTout.Pages.Contactpeople.GetContactPeopleModel
@{ ViewData["Title"] = "Kontakt"; }
<h1> @Html.DisplayFor(model => model.Contactpeople.First().Location.Company)</h1>
<table class="table">
	<tbody>
		@if (Model.Contactpeople != null)
		{
			@foreach (var item in Model.Contactpeople)
			{
				<tr>
					<th>Email</th>
					@if (item.Email == null)
					{
						<td></td>
					}
					else
					{
						<td> @item.Email</td>
					}
				</tr>
				<tr>
					<th>Telefon</th>
					@if (item.Phone == null)
					{
						<td></td>
					}
					else
					{
						<td>  @item.Phone</td>
					}
				</tr>
				<tr>
					<th>Åbningstider</th>
					@if (item.Location.OpeningHours.Count == 0)
					{
						<td></td>
						<td></td>
					}
					else
					{
				<td>
					@foreach (var i in item.Location.OpeningHours)
					{
						@i.WeekDay <br /> @i.OpenHours <br />
					}
				</td>
					}
				</tr>
			}
		}
	</tbody>
</table>